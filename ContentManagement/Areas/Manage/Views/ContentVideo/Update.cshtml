@model ContentManagement.ViewModels.Areas.Manage.ContentVideoViewModel
@{
    ViewData["Title"] = "ویرایش ویدئو";
    var contentId = ViewContext.HttpContext.Request.Query["cid"];
}

<style>
    .custom-file-input ~ .custom-file-label::after {
        content: "انتخاب فایل";
    }
</style>

<h3>ویرایش ویدئو</h3>

<div class="container">
    <div class="alert alert-info" role="alert">
        فرمت ویدئو می بایست .mp4 یا .webm یا .ogg باشد.
    </div>

    <form method="post" autocomplete="off" class="needs-validation" enctype="multipart/form-data" novalidate>
        @{ await Html.RenderPartialAsync("_CustomValidationSummary"); }

        <input type="hidden" id="cid" name="cid" value="@contentId" />
        <input type="hidden" id="id" name="id" value="@Model.Id" />

        <div class="form-group row" condition-class-mb-5="string.IsNullOrEmpty(Model.Videoname)" condition-class-mb-0="!string.IsNullOrEmpty(Model.Videoname)">
            <label asp-for="Video" class="col-sm-2 form-control-label">ویدئو</label>
            <div class="col-sm-10 custom-file">
                <input type="file" class="custom-file-input" asp-for="Video" lang="fa">
                <label class="custom-file-label" asp-for="Video" style="margin-left: 15px; margin-right: 15px;">ویدئو</label>
                <span class="text-danger" asp-validation-for="Video"></span>
            </div>
        </div>
        <container asp-if="!string.IsNullOrEmpty(Model.Videoname)">
            <div class="form-group row mb-5">
                <label class="col-sm-2 form-control-label">&nbsp;</label>
                <div class="col-sm-10 custom-file">
                    <a href="/@ContentManagement.Infrastructure.Constants.ContentVideosRootPath/@Model.Videoname" target="_blank">دریافت ویدئو فعلی</a>
                </div>
            </div>
        </container>
        <div class="form-group row">
            <label asp-for="Caption" class="col-sm-2 form-control-label">عنوان ویدئو(اختیاری)</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="Caption" placeholder="عنوان ویدئو(اختیاری)">
                <span class="text-danger" asp-validation-for="Caption"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Width" class="col-sm-2 form-control-label">طول ویدئو(اختیاری)</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" asp-for="Width" placeholder="طول ویدئو(اختیاری)">
                <span class="text-danger" asp-validation-for="Width"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Height" class="col-sm-2 form-control-label">ارتفاع ویدئو(اختیاری)</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" asp-for="Height" placeholder="ارتفاع ویدئو(اختیاری)">
                <span class="text-danger" asp-validation-for="Height"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Priority" class="col-sm-2 form-control-label">اولویت</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" asp-for="Priority" placeholder="اولویت قرارگیری">
                <span class="text-danger" asp-validation-for="Priority"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="EnableControls" class="col-sm-2 form-control-label">قابلیت کنترل؟</label>
            <div class="col-sm-10">
                <input type="checkbox" class="form-control" asp-for="EnableControls" style="width: 2%;">
                <span class="text-danger" asp-validation-for="EnableControls"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="EnableAutoplay" class="col-sm-2 form-control-label">پخش خودکار؟</label>
            <div class="col-sm-10">
                <input type="checkbox" class="form-control" asp-for="EnableAutoplay" style="width: 2%;">
                <span class="text-danger" asp-validation-for="EnableAutoplay"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 form-control-label"></label>
            <div class="col-sm-10">
                <button class="btn btn-primary" type="submit">ذخیره</button>
                <a role="button" class="btn btn-secondary" href="/manage/contentvideo/?cid=@contentId">بازگشت</a>
            </div>
        </div>
    </form>
</div>

@section scripts
    {
    <script>
        $(document).ready(function () {
        });
    </script>
}
