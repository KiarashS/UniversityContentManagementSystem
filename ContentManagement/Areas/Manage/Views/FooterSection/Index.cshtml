@{
    ViewData["Title"] = "مدیریت بخش بندی لینک های فوتر";
    Layout = "~/Areas/Manage/Views/_Layout.cshtml";
}

<div class="m-3">
    <a class="btn btn-primary" role="button" href="/manage/footersection/add/">ایجاد بخش جدید</a>
</div>

@if (TempData["IsOk"] != null && (bool)TempData["IsOk"] == true)
{
    <div class="alert alert-success">
        <a href="#" class="close" data-dismiss="alert">×</a>
        <div>عملیات با موفقیت انجام شد.</div>
    </div>
}

<div class="alert alert-info" role="alert">
    توجه داشته باشید که به ازای هر پرتال و هر زبان، تنها @SiteSettings.Value.PagesSize.FooterSectionsSize بخش که دارای اولویت بالاتر و یا جدیدتر می باشند، نمایش داده می شود.
</div>

<div class="card">
    <div class="card-header">
        مدیریت بخش بندی لینک های فوتر
    </div>
    <div class="card-body">
        <form>
            <div class="form-row">
                <div class="col-md-12">@await Component.InvokeAsync(nameof(PortalsAndLanguages))</div>
            </div>
        </form>
        <table class="table table-bordered table-sm table-hover" id="sectionsTable" style="width: 100%;">
            <thead class="thead-default">
                <tr>
                    <th>عنوان</th>
                    <th>فعال است؟</th>
                    <th>اولویت قرارگیری</th>
                    <th>عملیات</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

@section scripts{
    <script>
        var table;
        $(document).ready(function () {
            table = $('#sectionsTable').DataTable({
                language: {
                    "url": "/statics/Datatable.Persian.json"
                },
                ordering: false,
                paging: true,
                searching: true,
                processing: true,
                serverSide: true,
                stateSave: true,
                stateDuration: 0,
                searchDelay: null,
                ajax: {
                    url: '/manage/footersection/list/',
                    dataSrc: 'data',
                    type: "POST",
                    data: function (d) {
                        d.portalId = $('#PortalId').val();
                        d.language = $('#Language').val();
                    }
                },
                columnDefs: [
                    {
                        "width": "50%",
                        "targets": 0,
                        "data": null,
                        "className": "text-center align-middle",
                        "render": function (data, type, row, meta) {
                            if (!data.url) {
                                return '<span>' + data.title + '</span>';
                            }
                            else {
                                return '<a href="' + data.url + '" target="_blank" rel="noreferrer">' + data.title + '</a>';
                            }
                        }
                    },
                    {
                        "width": "15%",
                        "targets": 1,
                        "className": "align-middle",
                        "data": "isEnable",
                        "render": function (data, type, row, meta) {
                            if (data) {
                                return '<span>بله</span>';
                            }
                            return '<span>خیر</span>';
                        }
                    },
                    {
                        "width": "15%",
                        "targets": 2,
                        "className": "text-center align-middle",
                        "data": "priority",
                        "render": function (data, type, row, meta) {
                            if (data) {
                                return '<span>' + data + '</span>';
                            }
                            return '';
                        }
                    },
                    {
                        "width": "20%",
                        "targets": 3,
                        "className": "text-center align-middle",
                        "data": "id",
                        "render": function (data, type, row, meta) {
                            return '<a href="/manage/footersection/update/' + data + '/" title="ویرایش"><i class="fa fa-edit fa-lg"></i></a>&nbsp|&nbsp;<a href="/manage/footerlink/?sid=' + data + '" target="_blank" data-role="section-links" title="مدیریت لینک های بخش" data-id="' + data + '"><i class="fas fa-link fa-lg"></i></a>&nbsp;|&nbsp;<a href="#" data-role="delete-section" title="حذف" data-id="' + data + '"><i class="far fa-trash-alt fa-lg"></i></a>';
                        }
                    }]
            });

            $('#sectionsTable tbody').on('click', 'a[data-role="delete-section"]', function () {
                var row = table.row($(this).parents('tr'));
                var data = row.data();

                swal.fire({
                    title: 'آیا از انجام این کار اطمینان دارید؟',
                    text: "این عملیات غیرقابل بازگشت می باشد!",
                    type: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#3085d6',
                    confirmButtonText: 'بله!',
                    cancelButtonText: 'خیر',
                    focusCancel: true,
                    focusConfirm: false
                }).then((result) => {
                    if (result.value) {
                        axios.post('/manage/footersection/delete/' + data.id + '/')
                            .then(function (response) {
                                row.remove().draw();
                                swal.fire({
                                    title: 'انجام شد!',
                                    text: response.data,
                                    type: 'success',
                                    confirmButtonText: 'بستن',
                                });
                            })
                            .catch(function (error) {
                                swal.fire({
                                    title: 'خطا!',
                                    text: 'عملیات با خطا مواجه گشت.',
                                    type: 'error',
                                    confirmButtonText: 'بستن',
                                });
                            });
                    }
                })
            });

            $('#PortalId, #Language').on('change', function () {
                table.ajax.reload(null, false); // user paging is not reset on reload
            });
        });
    </script>
}
