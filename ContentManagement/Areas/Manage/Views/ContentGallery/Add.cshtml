@model ContentManagement.ViewModels.Areas.Manage.ContentGalleryViewModel

@{
    ViewData["Title"] = "ایجاد گالری جدید";
    var contentId = ViewContext.HttpContext.Request.Query["cid"];
}

<style>
    .custom-file-input ~ .custom-file-label::after {
        content: "انتخاب فایل";
    }
</style>

<h3>ایجاد گالری جدید</h3>

<div class="container">
    <div class="alert alert-info" role="alert">
        توجه داشته باشید که سایز تصویر گالری می بایست @ContentManagement.Infrastructure.Constants.ContentGalleryWidthSize در @ContentManagement.Infrastructure.Constants.ContentGalleryHeightSize پیکسل باشد.
    </div>

    <div class="alert alert-info" role="alert">
        توجه داشته باشید، در صورت نیاز به درج توضیحات تصویر، اولین خط از توضیحات تصویر به عنوان تیتر تصویر و مابقی متن به عنوان توضیحات تصویر در نظر گرفته می شوند.
    </div>

    <form method="post" autocomplete="off" class="needs-validation" enctype="multipart/form-data" novalidate>
        @{ await Html.RenderPartialAsync("_CustomValidationSummary"); }

        <input type="hidden" id="cid" name="cid" value="@contentId" />

        <div class="form-group row mb-5">
            <label asp-for="Image" class="col-sm-2 form-control-label">تصویر</label>
            <div class="col-sm-10 custom-file">
                <input type="file" class="custom-file-input" asp-for="Image" lang="fa">
                <label class="custom-file-label" asp-for="Image" style="margin-left: 15px; margin-right: 15px;">تصویر</label>
                <span class="text-danger" asp-validation-for="Image"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Priority" class="col-sm-2 form-control-label">اولویت</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" asp-for="Priority" placeholder="اولویت قرارگیری">
                <span class="text-danger" asp-validation-for="Priority"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Caption" class="col-sm-2 form-control-label">توضیحات تصویر(اختیاری)</label>
            <div class="col-sm-10">
                <textarea class="form-control" asp-for="Caption" placeholder="توضیحات تصویر" rows="5"></textarea>
                <span class="text-danger" asp-validation-for="Caption"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 form-control-label"></label>
            <div class="col-sm-10">
                <button class="btn btn-primary" type="submit">ذخیره</button>
                <a role="button" class="btn btn-secondary" href="/manage/contentgallery/?cid=@contentId">بازگشت</a>
            </div>
        </div>
    </form>
</div>

@section scripts
{
    <script>
        $(document).ready(function () {
        });
    </script>
}
