@model ContentManagement.ViewModels.Areas.Manage.ResetPasswordViewModel

@{
    ViewData["Title"] = "تغییر رمز عبور";
}

<h3>تغییر رمز عبور</h3>

<div class="container">
    <form id="userform" method="post" autocomplete="off" class="needs-validation" novalidate>
        @Html.AntiForgeryToken()
        @{ await Html.RenderPartialAsync("_CustomValidationSummary"); }

        <div class="form-group row">
            <label asp-for="Password" class="col-sm-2 form-control-label">رمز عبور جدید</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" asp-for="Password" autocomplete="off" placeholder="رمز عبور جدید">
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-12">
                <button class="btn btn-primary" type="submit">بروزرسانی</button>
                <a role="button" class="btn btn-secondary" href="/manage/users/">بازگشت</a>
            </div>
        </div>
    </form>
</div>

@section scripts
    {
    <script defer>
        $(document).ready(function () {
        });
    </script>
}
