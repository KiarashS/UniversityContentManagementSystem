@{
    ViewData["Title"] = SharedLocalizer["Error!"];
    this.Context.Response.StatusCode = (int)HttpStatusCode.Unauthorized;
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card my-4">
                <div class="card-body text-danger text-center">
                    <h1><span aria-hidden="true" class="fas fa-ban"></span>@SharedLocalizer["Error!"]</h1>
                    <h3>@SharedLocalizer["Access Denied"]</h3>
                    <br />
                    <br />
                    <a href="/" class="btn btn-primary">@SharedLocalizer["Back To Home Page"]</a>
                </div>
            </div>
        </div>
    </div>
</div>
