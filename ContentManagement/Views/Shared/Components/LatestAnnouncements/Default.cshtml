@model IList<ContentManagement.ViewModels.ContentsViewModel>

<container asp-if="Model.Any()">
    <div class="row no-gutters" style="font-size: 0.9rem !important;">
        <div class="col-12">
            <ul class="list-unstyled">

                @foreach (var item in Model)
                {
                    <li class="media" condition-class-my-2="Model.Count > 2 && (Model.First() != item || Model.Last() != item)" condition-class-mb-2="Model.Count == 2 && Model.First() == item">
                        <img class="mr-3 img-fluid img-thumbnail hoverable" src="@(!string.IsNullOrEmpty(item.Imagename) ? $"/{ContentManagement.Infrastructure.Constants.ContentsRootPath}/{item.Imagename}" : "/statics/logo.png")?width=40&height=40&rmode=pad&bgcolor=white" alt="@item.Title" title="@item.Title" data-tippy-animation="shift-away" data-tippy-size="small" data-tippy-inertia="true" data-tippy-duration="[600, 300]" data-tippy-arrow="true" data-tippy>
                        <div class="media-body" style="font-size: 0.8rem !important;">
                            <a href="@UrlUtilityService.GenerateUrl(RequestService.PortalKey(), item.Id, item.Title, Url, Context.Request.Scheme, controller: "content", action: "details")" class="nounderline"><h5 class="mt-0 mb-1" style="font-size: 0.9rem !important;"><span class="hvr-pop">@item.GetTitle</span><container asp-if="item.IsNew">&nbsp;&nbsp;<span class="badge badge-pill badge-danger" style="font-size: 0.6rem !important;">@SharedLocalizer["New"]</span></container></h5></a>
                            <div class="text-muted float-right" title="@SharedLocalizer["Publish Date"]" style="font-size: 0.7rem !important;">@item.GetPublishDate</div>
                            @*@item.GetSummary*@
                        </div>
                    </li>
                }

            </ul>

            <hr class="hr14" />
        </div>

        <div class="col-12 mt-1">
            <a class="float-right nounderline btn btn-primary" style="font-size: 0.8rem !important;" condition-class-hvr-icon-back="@RequestService.IsRtl()" condition-class-hvr-icon-forward="@RequestService.IsLtr()" href="/content/?t=announcement">@SharedLocalizer["View All"]&nbsp;<i class="hvr-icon fas" condition-class-fa-angle-double-left="@RequestService.IsRtl()" condition-class-fa-angle-double-right="@RequestService.IsLtr()"></i></a>
        </div>
    </div>
</container>
