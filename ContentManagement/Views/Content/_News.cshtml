                {
                    var item = Model[i];

                <div class="col-sm-12 col-md-6 col-lg-4 col-xl-4 text-center mb-3">
                    <a href="@UrlUtilityService.GenerateUrl(RequestService.PortalKey(), item.Id, item.Title, Url, Context.Request.Scheme, controller: "content", action: "details")" class="nounderline">
                        <img class="mr-3 img-fluid img-thumbnail hoverable mb-1" style="min-width: 200px; min-height: 120px;" src="@(!string.IsNullOrEmpty(item.Imagename) ? $"/{ContentManagement.Infrastructure.Constants.ContentsRootPath}/{item.Imagename}" : "/statics/logo.png")?width=200&height=120&rmode=pad&bgcolor=white" alt="@item.Title" asp-append-version="true" data-tippy-content="@item.Title" data-tippy-animation="shift-away" data-tippy-size="small" data-tippy-inertia="true" data-tippy-duration="[600, 300]" data-tippy-arrow="true" data-tippy>
