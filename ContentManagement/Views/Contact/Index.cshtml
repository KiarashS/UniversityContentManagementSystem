@model ContentManagement.ViewModels.ContactViewModel

<div class="container-fluid bg-white shadow-sm">
    <div class="row">
        <div class="container">
            <div class="row">
                <div class="col my-5 mx-3">
                    <h5><i class="far fa-envelope"></i> @SharedLocalizer["Contact Us"]</h5>

                    <hr class="hr14" />

                    @if (ViewBag.IsSuccess != null && (bool)ViewBag.IsSuccess)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @ViewBag.AlertMessage
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close" title="@SharedLocalizer["Close"]">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }

                    <form method="post">
                        @Html.AntiForgeryToken()

                        @if (ViewData.ModelState.Any(keyValuePair => keyValuePair.Value.Errors.Any()))
                        {
                            <div class="alert alert-danger">
                                <a href="#" class="close" data-dismiss="alert">×</a>
                                <div asp-validation-summary="All"></div>
                            </div>
                        }

                        <div class="form-group row">
                            <label for="Name" class="col-sm-2 col-form-label">@SharedLocalizer["Name"]</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" asp-for="Name" placeholder="@SharedLocalizer["Name"]" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="Email" class="col-sm-2 col-form-label">@SharedLocalizer["Email"]</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" dir="ltr" asp-for="Email" placeholder="@SharedLocalizer["Email"]" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="Message" class="col-sm-2 col-form-label">@SharedLocalizer["Message"]</label>
                            <div class="col-sm-10">
                                <textarea class="form-control" asp-for="Message" rows="6" placeholder="@SharedLocalizer["Message"] ..." required></textarea>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">&nbsp;</label>
                            <div class="col-sm-10">
                                <button type="submit" class="btn btn-primary btn-sm">@SharedLocalizer["Submit"]</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
